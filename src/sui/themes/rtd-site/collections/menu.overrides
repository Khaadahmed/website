// Top navigation
.ui.underlined.menu {
  .item {
    position: relative;

    &.active {
      &:after {
        display: block;
        content: "";
        height: 3px;
        position: absolute;
        bottom: 0;
        left: @itemHorizontalPadding;
        right: @itemHorizontalPadding;
        background: @primaryColor;
      }
    }
  }
}
