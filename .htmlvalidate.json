{
  "extends": ["html-validate:recommended"],
  "rules": {
    "void-style": "off",
    "no-dup-class": "off",
    "no-trailing-whitespace": "off",
    "no-inline-style": [
      "error",
      {
        "allowedProperties": [
          "--fa-primary-opacity",
          "--fa-primary-color",
          "--fa-secondary-opacity",
          "--fa-secondary-color"
        ]
      }
    ]
  }
}
